{
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"eslint-config-prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/prop-types": "off",
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "React" // Ignore unused React import
      }
    ]
	}
}
